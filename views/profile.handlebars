<h2> Welcome to your profile {{this.transaction.0.user.username}}!</h2>
<section>
    <h2>Budget</h2>
    <div>
        ${{this.transaction.0.user.monthly_income}}

    </div>
   
    {{#if transaction.length}}
    <section>
        <h2>Your Transactions</h2>
        <ol class="transaction-list">
            {{#each transaction}}
            <li>
                <div class="meta">
                    <a href="/profile/edit/{{id}}">{{memo}}</a>
                    {{log id}}
                    <p>How much: ${{amount}}</p> 
                    <p>Date of transaction: {{format_date date}}</p> 
                    <p>Category: {{category}}</p>
                </div>
            </li>
            {{/each}}
        </ol>
    </section>
    {{/if}}
    <div>
        **Pie chart**
    </div>
</section>
<div>
    <button type="button">Edit Income</button>
</div>
<div>
    <button type="button">Edit Transaction</button>
</div>
<a href="/transaction">
    <button type="button">Add transaction</button>
</a>
<button type="button" class="destroyTransaction">Delete transaction</button>
</div>

